{
  "name": "ccsummary",
  "version": "1.0.0",
  "description": "Claude Code usage summary generator - analyze ~/.claude and create daily reports",
  "main": "dist/index.js",
  "bin": {
    "ccsummary": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "test": "jest",
    "lint": "eslint --config .eslintrc.json src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "summary",
    "report",
    "cli"
  ],
  "author": "yoshikouki",
  "license": "MIT",
  "packageManager": "pnpm@10.12.4",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dayjs": "^1.11.13",
    "ink": "^6.0.1",
    "ink-select-input": "^6.2.0",
    "ink-text-input": "^6.0.0",
    "ora": "^8.1.0",
    "react": "^19.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/react": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
